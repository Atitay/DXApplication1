@model GorgeShipping.Models.ViewModel.UserListViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <form method="post" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-info text-center">New Phone Number</h2>
        <br /><br />
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <b>Phone Information</b>
                <hr width=50% size=5 align=left>
                <div style="background-color:lavenderblush;">

                    <div class="form-group rounded">
                        <div class="col">
                            <label asp-for="TelephoneNumbers.TelNumber"></label>
                        </div>
                        <div class="col">
                            @(Html.DevExtreme().TextBoxFor(m => m.TelephoneNumbers.TelNumber).Mask("000-000-0000").Width(200).Height(30))
                        </div>
                        <span asp-validation-for="TelephoneNumbers.TelNumber" class="text-danger"></span>
                        <br />
                    </div>
                </div>
                    <div class="form-group text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Back to List</a> 
                        <input type="submit" class="btn btn-outline-info" value="Create" />
                    </div>

                    <div class="col-sm-3"></div>
                </div>
            </div>
        
    </form>

    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
