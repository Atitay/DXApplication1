@using GorgeShipping.Models
@model  IEnumerable<GorgeShipping.Models.User>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Gorge Shipping</h2>
    <br />

    <div class="row" style="padding-top:10px">
        <div class="col-9">
            Phone Number :

            @Html.Editor("searchPhone", new { htmlAttributes = new { @class = "form-control" } })
            <br />
            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
        </div>
    </div>
    <br />
    <div class="text-justify">
        <a asp-action="Create" class="btn btn-info"> <i class="fas fa-user-plus"></i> &nbsp; New Contact</a>
    </div>

    <br /> <br />
    <div class="col-9">
        <table class="table table-striped border">
            <tr class="table-striped">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().TelephoneNumbers.FirstOrDefault().TelNumber)
                </th>


            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.TelDefault.TelNumber)
                    </td>

                </tr>
            }
        </table>
    </div>


</body>
</html>
