@model IEnumerable<GorgeShipping.Models.User>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2 class="text-info">Contact List</h2>
    <br />
    <div class="text-right">
        <a asp-action="Create" class="btn btn-info"> <i class="fas fa-user-plus"></i> &nbsp; New Contact</a>
    </div>

    <br /> <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-striped">
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().TelephoneNumbers.FirstOrDefault().TelNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Addresses.FirstOrDefault().AddressDetail)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Addresses.FirstOrDefault().District)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Addresses.FirstOrDefault().Province)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Addresses.FirstOrDefault().Code)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.FirstOrDefault().Addresses.FirstOrDefault().Note)
                </th>

                <th></th>
                <th></th>
            </tr>

            @foreach (var user in Model)
            {
        <tr data-href="@Url.Action("Edit/"+user.id)">
            <td>
                @Html.DisplayFor(m => user.Name)
            </td>
            <td>
                @Html.DisplayFor(m => user.Email)
            </td>
            <td>
                @Html.DisplayFor(m => user.TelDefault.TelNumber)
            </td>
            <td>
                @Html.DisplayFor(m => user.Addresses.FirstOrDefault().AddressDetail)
            </td>
            <td>
                @Html.DisplayFor(m => user.Addresses.FirstOrDefault().District)
            </td>
            <td>
                @Html.DisplayFor(m => user.Addresses.FirstOrDefault().Province)
            </td>
            <td>
                @Html.DisplayFor(m => user.Addresses.FirstOrDefault().Code)
            </td>
            <td>
                @Html.DisplayFor(m => user.Addresses.FirstOrDefault().Note)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="user.id" />
            </td>
        </tr>
            }
        </table>
    </div>

    <script>
    @*Clickable Table*@

        document.addEventListener("DOMContentLoaded", () => {
            const rows = document.querySelectorAll("tr[data-href]");

            rows.forEach(row => {
                row.addEventListener("click", () => {
                    window.location.href = row.dataset.href;
                });
            })
        });
    </script>

    @* Cursor mouse *@
    <style>
        tr[data-href] {
            cursor: pointer;
        }
    </style>
</body>
</html>


