@model GorgeShipping.Models.ViewModel.UserListViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <div class="form-group row">
        <div class="col-3"></div>

        <div class="col">
            <h2 class="text-info">New Address</h2>
            <form method="post">
                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Addresses.AddressDetail"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Addresses.AddressDetail" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Addresses.District"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Addresses.District" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Addresses.Province"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Addresses.Province" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Addresses.Code"></label>
                        </div>
                        <div class="col">
                            @(Html.DevExtreme().TextBoxFor(m => m.Addresses.Code).Mask("00000"))
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Addresses.Note"></label>
                        </div>
                        <div class="col">
                            <input asp-for="Addresses.Note" class="form-control" />
                        </div>
                    </div>


                    <br />
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-info" value="Create" />
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success">Back to List</a>
                    </div>
               
            </form>
        </div>
        <div class="col-3"></div>
    </div>


    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
